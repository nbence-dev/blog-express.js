<div
  id="readModalOverlay"
  class="fixed inset-0 z-50 hidden flex items-center justify-center bg-[#0D1117]/90 backdrop-blur-md p-4"
>
  <div
    class="bg-[#161B22] border border-gray-700 w-full max-w-2xl rounded-xl shadow-2xl overflow-hidden flex flex-col max-h-[90vh]"
  >
    <div
      class="px-6 py-4 border-b border-gray-800 bg-[#0D1117]/50 flex justify-between items-center"
    >
      <span
        id="readCategory"
        class="text-[10px] font-mono font-bold px-2 py-1 rounded bg-sky-500/10 text-sky-400 border border-sky-400/20"
        >CATEGORY</span
      >
      <button
        id="closeReadModal"
        class="text-gray-500 hover:text-white transition-colors text-2xl cursor-pointer"
      >
        &times;
      </button>
    </div>

    <div class="p-8 overflow-y-auto custom-scrollbar">
      <h2
        id="readTitle"
        class="text-3xl font-bold text-white font-mono mb-6 leading-tight"
      ></h2>
      <div
        id="readContent"
        class="text-gray-300 leading-relaxed whitespace-pre-wrap font-light text-lg"
      ></div>
    </div>

    <div
      class="px-8 py-4 border-t border-gray-800 bg-[#0D1117]/50 flex justify-between items-center"
    >
      <span id="readID" class="text-xs font-mono text-gray-600">ID: 0000</span>
      <button
        id="closeReadBtn"
        class="text-xs font-mono text-sky-500 hover:underline cursor-pointer"
      >
        CLOSE_TERMINAL
      </button>
    </div>
  </div>
</div>
